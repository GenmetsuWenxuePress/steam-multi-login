{
  "manifest_version": 3,
  "name": "Steam Multi-Login Manager",
  "version": "1.0",
  "description": "Professional Steam Account Manager",
  "permissions": [
    "contextualIdentities",
    "cookies",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.steampowered.com/*",
    "*://steamcommunity.com/*"
  ],
  "background": {
    "page": "background.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Steam Manager",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "steam-multi-login@Genmetsu-Wenxue-Press",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
          "required": ["none"],
          "optional": []
      }
    }
  }
}